{
    "name": "molajo/molajo",
    "description": "Molajo Content Management Framework",
    "type": "application",
    "keywords": ["Molajo", "Application", "CommonApi"],
    "homepage": "http://github.com/Molajo/Molajo",
    "license": "MIT",
    "version": "0.1.0-alpha",

    "authors": [
        {
            "name": "Amy Stephen",
            "email": "AmyStephen@Molajo.org",
            "homepage": "http://AmyStephen.com"
        }
    ],

    "support": {
        "event": "hello@molajo.org",
        "irc": "irc://irc.freenode.org/molajo"
    },

    "require": {
        "php": ">=5.3.10",
        "molajo/authorisation": "dev-master",
        "molajo/cache": "dev-master",
        "molajo/database": "dev-master",
        "molajo/email": "dev-master",
        "molajo/event": "dev-master",
        "molajo/fieldhandler": "dev-master",
        "molajo/filesystem": "dev-master",
        "molajo/framework": "dev-master",
        "molajo/http": "dev-master",
        "molajo/ioc": "dev-master",
        "molajo/language": "dev-master",
        "molajo/log": "dev-master",
        "molajo/render": "dev-master",
        "molajo/resource": "dev-master",
        "molajo/route": "dev-master",
        "molajo/user": "dev-master",
        "phpunit/php-code-coverage": ">=1.2.10,<1.3.0"
    },

    "autoload": {
        "psr-4": {
            "Molajo": "/"
        }
    },

    "archive": {
        "exclude": ["/.dev"]
    },

    "minimum-stability": "dev"
}
