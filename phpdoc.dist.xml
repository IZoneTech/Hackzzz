<?xml version="1.0" encoding="UTF-8" ?>
<phpdoc>
    <title>Molajo Content Management Framework</title>
    <parser>
        <target>.dev/Docs</target>
        <markers>
            <item>TODO</item>
            <item>FIXME</item>
        </markers>
        <extensions>
            <extension>php</extension>
            <extension>phtml</extension>
        </extensions>
        <visibility></visibility>
    </parser>
    <transformer>
        <target>.dev/Docs</target>
    </transformer>
    <transformations>
        <template name="clean" />
    </transformations>
    <files>
        <directory>.</directory>
        <ignore>.dev/*</ignore>
        <ignore>vendor/composer/*</ignore>
        <ignore>vendor/filp/*</ignore>
        <ignore>vendor/joomla/*</ignore>
        <ignore>vendor/mustache/*</ignore>
        <ignore>vendor/phpmailer/*</ignore>
        <ignore>vendor/psr/*</ignore>
        <ignore>vendor/swiftmailer/*</ignore>
        <ignore>vendor/twig/*</ignore>
        <ignore>*autoload*</ignore>
    </files>
</phpdoc>
