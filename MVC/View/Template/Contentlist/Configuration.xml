<?xml version="1.0" encoding="utf-8"?>
<extension type="Templateview" version="1.0">
    <name>VIEW_TEMPLATE_CONTENTLIST_NAME</name>
    <author>Molajo Team</author>
    <create_date>August 2012</create_date>
    <copyright>Copyright (C) 2012 Amy Stephen. All rights reserved.</copyright>
    <license>GNU GPL v 2, or later and MIT, see License folder</license>
    <author_email>collaborate@molajo.org</author_email>
    <author_url>http://molajo.org</author_url>
    <version>1.0</version>
    <description>VIEW_TEMPLATE_CONTENTLIST_DESCRIPTION</description>
    <model name="Contentlist" extends="TemplateviewsSystem">
        <customfields>
            <customfield name="parameters">
                <field name="criteria_model_name" type="char" null="0" default="Articles"/>
                <field name="criteria_model_type" type="char" null="0" default=" "/>
                <field name="criteria_status_list" type="char" null="0" default="1,2" values="-10,-5,-2,-1,0,1,2"/>
                <field name="criteria_ordering" type="char" null="0" default="New"
                       values="Featured,Popular,Ordering,Stickied,New"/>
                <field name="criteria_count" type="integer" null="0" default="5"/>
                <field name="criteria_get_customfields" type="integer" null="0" default="2"/>
                <field name="criteria_use_special_joins" type="boolean" null="0" default="1"/>
                <field name="criteria_process_plugins" type="boolean" null="0" default="1"/>
                <field name="display_snippet" type="boolean" null="0" default="1"/>
                <field name="display_author_name" type="boolean" null="0" default="1"/>
                <field name="display_published_date" type="boolean" null="0" default="1"/>
            </customfield>
        </customfields>
    </model>
</extension>
