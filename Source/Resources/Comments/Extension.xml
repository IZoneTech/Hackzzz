    <version>1.0</version>
    <description>SYSTEM_COMMENTS_DESCRIPTION</description>
    <model
            name="Comments"
            primary_key_value="17000"
            criteria_catalog_type_id="12000"
            get_customfields="1"
            get_item_children="0"
            use_special_joins="1"
            check_view_level_access="1"
            process_events="1"
            use_pagination="0"
            extends="Contentextension"
            data_object="Database">

        <customfields>
            <customfield name="customfields">
                <field name="visitor_name" type="char" null="0" default=""/>
                <field name="email_address" type="char" null="0" default=""/>
                <field name="website" type="url" null="1" default=""/>
                <field name="ip_address" type="ip" null="0" default="127.0.0.1"/>
            </customfield>
        </customfields>

    </model>
</extension>
