<?xml version="1.0" encoding="utf-8"?>
<model
        name="User"
        table="#__users"
        primary_key="id"
        name_key="username"
        primary_prefix="a"
        get_customfields="2"
        get_item_children="1"
        use_special_joins="1"
        check_view_level_access="0"
        process_plugins="1"
        catalog_type_id="500"
        data_source="JDatabase">

    <table>
        <fields>
            <field name="id" type="integer" null="1" default="0" identity="1"/>
            <field name="catalog_type_id"/>
            <field name="username"/>
            <field name="first_name"/>
            <field name="last_name"/>
            <field name="full_name"/>
            <field name="content_text"/>
            <field name="email"/>
            <field name="password"/>
            <field name="block"/>
            <field name="register_datetime"/>
            <field name="activation_datetime"/>
            <field name="last_visit_datetime"/>
            <field name="customfields"/>
            <field name="parameters"/>
            <field name="metadata"/>
        </fields>

        <foreignkeys>
            <foreignkey name="catalog_type_id" source_id="id" source_model="CatalogTypes" required="1"/>
        </foreignkeys>

        <children>
            <child name="UserActivity" join="user_id"/>
            <child name="UserApplications" join="user_id"/>
            <child name="UserGroups" join="user_id"/>
            <child name="UserViewGroups" join="user_id"/>
        </children>

        <plugins>
            <plugin name="Email"/>
            <plugin name="Password"/>
            <plugin name="Username"/>
            <plugin name="Fullname"/>
            <plugin name="Gravatar"/>
            <plugin name="Smilies"/>
            <plugin name="Snippet"/>
            <plugin name="Readmore"/>
            <plugin name="Dateformats"/>
        </plugins>
    </table>
    <customfields>

        <customfield name="parameters">
            <field name="display_gravatar"/>
            <field name="display_birthdate"/>
            <field name="display_email"/>
            <field name="theme_id"/>
        </customfield>

        <customfield name="customfields">
            <field name="gender"/>
            <field name="about_me"/>
            <field name="editor"/>
            <field name="language"/>
            <field name="date_of_birth"/>
            <field name="secondary_email"/>
        </customfield>

        <customfield name="metadata">
            <include name="Metadata"/>
        </customfield>

    </customfields>
</model>
