<?xml version="1.0" encoding="utf-8"?>
<model
        name="Contentresources"
        process_plugins="1"
        extends="ContentTable">
    <table>
        <children>
            <child name="Comments" type="Resources" join="parent_id"/>
        </children>

        <plugins>
            <plugin name="Status"/>
            <plugin name="Itemurl"/>
            <plugin name="Mockimage"/>
            <plugin name="Blockquote"/>
            <plugin name="Rownumber"/>
            <plugin name="Readmore"/>
            <plugin name="Author"/>
            <plugin name="Smilies"/>
            <plugin name="Email"/>
            <plugin name="Gravatar"/>
            <plugin name="IFrame"/>
            <plugin name="Dateformats"/>
            <plugin name="Snippet"/>
            <plugin name="Publishedstatus"/>
            <plugin name="Cssclassandids"/>
            <plugin name="Pagination"/>
            <plugin name="Dateformats"/>
            <plugin name="Version"/>
            <plugin name="Ordering"/>
            <plugin name="Create"/>
        </plugins>

    </table>
    <customfields>
        <customfield name="customfields">
            <include field="tags"/>
            <include field="categories"/>
            <include field="author_notes"/>
        </customfield>
    </customfields>
</model>
