<?xml version="1.0" encoding="utf-8"?>
<model
        name="ExtensionSites"
        table="#__extension_sites"
        primary_key="id"
        name_key="name"
        use_pagination="1"
        data_source="JDatabase">

    <table>
        <fields>
            <field name="id" type="integer" null="0" default="" identity="1" hidden="1"/>
            <include name="name"/>
            <include name="enabled"/>
            <include name="location"/>
            <include name="customfields"/>
            <include name="parameters"/>
            <include name="metadata"/>
        </fields>
        <children>
            <child name="Extensions" join="site_id"/>
        </children>
        <plugins>
            <plugin name="Customfields"/>
            <plugin name="Metadata"/>
            <plugin name="Parameters"/>
        </plugins>
    </table>
</model>
