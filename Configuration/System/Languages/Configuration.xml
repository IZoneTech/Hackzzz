<?xml version="1.0" encoding="utf-8"?>
<extension type="Language" version="1.0" extends="Extensioninstances">
    <name>RESOURCE_LANGUAGES_NAME</name>
    <author>Molajo Team</author>
    <create_date>August 2012</create_date>
    <copyright>Copyright (C) 2012 Individual Molajo Contributors. All rights reserved.</copyright>
    <license>GNU GPL v 2, or later and MIT, see License folder</license>
    <author_email>collaborate@molajo.org</author_email>
    <author_url>http://molajo.org</author_url>
    <version>1.0</version>
    <description>RESOURCE_LANGUAGES_DESCRIPTION</description>
    <model
            name="Languages"
            table="#__extension_instances"
            primary_key="id"
            name_key="title"
            primary_prefix="a"
            get_customfields="1"
            get_item_children="0"
            use_special_joins="1"
            check_view_level_access="0"
            process_plugins="1"
            category_type_id="1100"
            data_source="JDatabase">
        <table>
            <fields>
                <include name="FieldsExtensionInstance"/>
            </fields>
            <joins>
                <include name="JoinsExtensionInstance"/>
            </joins>
            <foreignkeys>
                <include name="ForeignKeysExtensionInstance"/>
            </foreignkeys>
            <children>
                <include name="ChildrenExtensionInstance"/>
            </children>
            <plugins>
                <include name="PluginsExtensionInstance"/>
            </plugins>
        </table>
        <customfields>
            <customfield name="metadata">
                <include name="Metadata"/>
            </customfield>
            <customfield name="parameters">
                <field name="name" type="char" default="English (United Kingdom)" null="0"/>
                <field name="tag" type="char" default="en-GB" null="0"/>
                <field name="rtl" type="char" default="0" null="0"/>
                <field name="locale" type="char"
                       default="en_GB.utf8, en_GB.UTF-8, en_GB, eng_GB, en, english, english-uk, uk, gbr, britain, england, great britain, uk, united kingdom, united-kingdom"
                       null="0"/>
                <field name="first_day" type="integer" default="0" null="0" values="1,2,3,4,5,6,7"/>
                <include name="ParametersCache"/>
            </customfield>
        </customfields>
    </model>
</extension>
